@model IEnumerable<Homecare.Models.DataModels.PatientView>

@{
    ViewBag.Title = "Patienter";
}

<h2>Patienter</h2>

<p>
    @Html.ActionLink("Opret", "CreatePatient")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.patient_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cpr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone_number)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.patient_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cpr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone_number)
        </td>
        <td>
            @Html.ActionLink("Rediger", "EditPatient", new { id = item.id_patient }) |
            @Html.ActionLink("Info", "PatientDetails", new { id = item.id_patient }) |
            @Html.ActionLink("Slet", "DeletePatient", new { id = item.id_patient })
        </td>
    </tr>
}

</table>
